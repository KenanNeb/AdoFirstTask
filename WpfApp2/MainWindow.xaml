<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <ListView Margin="10,10,0,13" Name="ListView1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="494" Height="400">
               
            </ListView>

        </StackPanel>
        <StackPanel Grid.Column="1">

            <TextBlock Grid.Column="1" Grid.Row="0" Text="Name"></TextBlock>
            <TextBox Grid.Row="0" Margin="0,0,40,15" x:Name="FirstnameTxtbx"></TextBox>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="Surname"></TextBlock>
            <TextBox Grid.Row="2" Margin="0,0,40,15" x:Name="SurenameTxtbx"></TextBox>
            <Button x:Name="Add" Margin="0,0,40,15" Background="YellowGreen" Height="25" Click="Add_Click"> Add</Button>
        </StackPanel>
    </Grid>
</Window>
